<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!-- Stylesheets -->
    @Styles.Render("~/Content/themes/simple/css")
    @Scripts.Render("~/jquery", "~/jqueryval", "~/jqueryunobtrusiveval", "~/js")
</head>

<body>
    <div id="main">

        <!-- Header -->
        <div id="header">
            <div id="logo">
                <div id="logo_text">
                    <h1><a href="/">Just<span class="logo_colour">Blog</span></a></h1>
                    <h2>Writings, Experiments and More...</h2>
                </div>
            </div>

            <!-- Navigation -->
            <div id="menubar">
                <ul id="menu">
                    <li>@Html.ActionLink("Posts", "Posts" ,"Blog")</li>
                    <li>@Html.ActionLink("Contact", "Contact")</li>
                    <li>@Html.ActionLink("About Me", "AboutMe")</li>
                </ul>
            </div>

        </div>

        <!-- Site Content -->
        <div id="site_content">
            @Html.Partial("_Search")
            @RenderBody()

            @* Call the child action to render the sidebar *@
            @Html.Action("Sidebars")
        </div>

        <!-- Footer -->
        <div id="footer">
            Copyright ï¿½ @DateTime.Now.Year JustBlog All Rights Reserved
        </div>
    </div>
</body>
</html>